{
  "manifest_version": 3,
  "name": "DuetLingo",
  "version": "1.0",
  "description": "Instant Language Swap Extension",
  "permissions": ["scripting", "activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/secondicon_16.png",
      "48": "icons/secondicon_48.png",
      "128": "icons/secondicon_128.png"
    }
  },
  "icons": {
    "16": "icons/secondicon_16.png",
    "48": "icons/secondicon_48.png",
    "128": "icons/secondicon_128.png"
  }
}
